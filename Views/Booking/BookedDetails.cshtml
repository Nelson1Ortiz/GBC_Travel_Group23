@model GBC_Travel_Group23.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h2>Confirm Your Booking</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-info">
                <p>Client: <strong>@Model.Client.FullName</strong></p>
                <p>Email: <strong>@Model.Client.Email</strong></p>
                <p>Phone: <strong>@Model.Client.Phone</strong></p>
                <p>Booking Type: <strong>@Model.Type</strong></p>
                @if (Model.Type == "Flight")
                {
                    <p>Flight Code: <strong>@Model.Flight.FlightCode</strong></p>
                    <p>Departure: <strong>@Model.Flight.DepartureLocation.City</strong> on <strong>@Model.StartDate.ToShortDateString()</strong></p>
                    <p>Arrival: <strong>@Model.Flight.ArrivalLocation.City</strong> on <strong>@Model.EndDate.ToShortDateString()</strong></p>
                }
                else if (Model.Type == "HotelRoom")
                {
                    <p>Hotel: <strong>@Model.HotelRoom.Hotel.Name</strong></p>
                    <p>Location: <strong>@Model.HotelRoom.Hotel.Location.City, @Model.HotelRoom.Hotel.Location.Country</strong></p>
                    <p>Room: <strong>@Model.HotelRoom.RoomName</strong></p>
                    <p>Max Occupants: <strong>@Model.HotelRoom.MaxOccupants</strong></p>
                    <p>Amenities: <strong>@string.Join(", ", Model.HotelRoom.Amenities)</strong></p>
                    <p>Room Count: <strong>@Model.HotelRoom.RoomCount</strong></p>
                    <p>Rate (per night): <strong>@Model.HotelRoom.Rate.ToString("C")</strong></p>
                }
                else if (Model.Type == "CarRental")
                {
                    <p>Car: <strong>@Model.CarRental.Make @Model.CarRental.Model</strong></p>
                    <p>Pick-Up: <strong>@Model.StartDate.ToShortDateString()</strong></p>
                    <p>Drop-Off: <strong>@Model.EndDate.ToShortDateString()</strong></p>
                }
                <p>Guest Count: <strong>@Model.GuestCount</strong></p>
            </div>

            <form asp-action="CompleteBooking" method="post">
                @Html.HiddenFor(model => model.ClientId)
                @Html.HiddenFor(model => model.Type)
                @Html.HiddenFor(model => model.ServiceId)
                @Html.HiddenFor(model => model.GuestCount)
                @Html.HiddenFor(model => model.StartDate)
                @Html.HiddenFor(model => model.EndDate)

                <button type="submit" class="btn btn-success">Confirm Booking</button>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Search</a>
</div>
