@model GBC_Travel_Group23.Models.Booking

@{
    ViewData["Title"] = "Make Booking";
    var isFlight = Model.Type.Equals("flight", StringComparison.OrdinalIgnoreCase);
    var isHotelRoom = Model.Type.Equals("hotelroom", StringComparison.OrdinalIgnoreCase);
    var isCarRental = Model.Type.Equals("carrental", StringComparison.OrdinalIgnoreCase);
    
    var preselectedStartDate = Model.StartDate.ToString("yyyy-MM-dd");
    var preselectedEndDate = Model.EndDate.ToString("yyyy-MM-dd");
}

<h1>Make Your Booking</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="MakeBookingClient" method="post">
            
            <input type="hidden" asp-for="ServiceId" />
            <input type="hidden" asp-for="Type" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="EndDate" />

            <div class="form-group">
                <label>Type of Booking</label>
                <input type="text" value="@Model.Type" class="form-control" readonly />
            </div>

            @if (isFlight || isHotelRoom || isCarRental)
            {
                <div class="form-group">
                    <label>Start Date</label>
                    <input type="text" value="@preselectedStartDate" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>End Date</label>
                    <input type="text" value="@preselectedEndDate" class="form-control" readonly />
                </div>
            }

            
            <div class="form-group">
                <label asp-for="Client.FullName" class="control-label">Full Name</label>
                <input asp-for="Client.FullName" class="form-control" />
                <span asp-validation-for="Client.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirm Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Search" asp-action="SearchListings">Back to Search</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
