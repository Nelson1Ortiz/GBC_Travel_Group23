@model GBC_Travel_Group23.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Confirm Booking";
}

<div class="container mt-4">
    <h2>Confirm Your Booking</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="ClientId">Client ID</label>
                    <input asp-for="ClientId" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Type">Booking Type</label>
                    <select asp-for="Type" class="form-control">
                        <option value="">Select Type</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ServiceId">Service ID</label>
                    <input asp-for="ServiceId" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="GuestCount">Guest Count</label>
                    <input asp-for="GuestCount" type="number" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="StartDate">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="EndDate">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Confirm Booking</button>
            </form>
        </div>
    </div>
</div>
