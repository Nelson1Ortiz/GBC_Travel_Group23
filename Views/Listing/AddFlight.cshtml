@model GBC_Travel_Group23.Models.Flight

@{
    ViewData["Title"] = "AddFlight";
}

<h1>AddFlight</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Airline" class="control-label"></label>
                <input asp-for="Airline" class="form-control" />
                <span asp-validation-for="Airline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plane" class="control-label"></label>
                <input asp-for="Plane" class="form-control" />
