@model GBC_Travel_Group23.Models.Hotel

@{
    ViewData["Title"] = "Hotel Details";
    string? mode = ViewBag.Mode; // Adjust based on your actual mode determination logic
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3>@Model.Name Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Location</dt>
                        <dd class="col-sm-9">@Model.Location.City, @Model.Location.Country</dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Amenities</dt>
                        <dd class="col-sm-9">@string.Join(", ", Model.Amenities)</dd>
                    </dl>
                    <div class="text-center">
                        <!-- Assuming you want to allow booking the entire hotel, adjust the action and parameters as needed -->
                        <a target="_blank" href="@Url.Action("CreateBooking", "Booking", new { type = "hotel", Id = Model.Id })" class="btn btn-success">Book</a>
                        <a target="_blank" href="@Url.Action("EditHotel", "Listing", new { Id = Model.Id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("DeleteHotel", "Listing", new { Id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this hotel?');">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
