@model GBC_Travel_Group23.Models.Hotel

@{
    ViewData["Title"] = "Hotel Details";
    string? mode = ViewBag.Mode; // Assuming you have a similar mechanism for Hotels
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    @if (mode == "edit")
                    {
                        <span>Edit Hotel</span>
                    }
                    else
                    {
                        <span>Hotel Details</span>
                    }
                </div>
                <div class="card-body">
                    @if (mode != "edit")
                    {
                        <!-- Display Hotel Details -->
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">Location</dt>
                            <dd class="col-sm-9">@Model.Location.City, @Model.Location.Country</dd>

                            <dt class="col-sm-3">Address</dt>
                            <dd class="col-sm-9">@Model.Address</dd>

                            <dt class="col-sm-3">Amenities</dt>
                            <dd class="col-sm-9">@string.Join(", ", Model.Amenities)</dd>
                        </dl>

                        <div class="text-center">
                            <a href="@Url.Action("EditHotel", new { id = Model.Id })" class="btn btn-primary">Edit</a>
                            <!-- Fix: Update the Delete link -->
                            <a href="@Url.Action("DeleteHotel", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                        </div>
                    }
                    else
                    {
                        <!-- Fix: Edit form fields for Hotel -->
                    }
                </div>
            </div>
        </div>
    </div>
</div>
