@model GBC_Travel_Group23.Models.HotelRoom

@{
    ViewData["Title"] = "Hotel Room Details";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Hotel.Name - @Model.RoomName</h5>
            <p class="card-text">Max Occupants: @Model.MaxOccupants</p>
            <p class="card-text">Amenities: @string.Join(", ", Model.Amenities)</p>
            <p class="card-text">Room Count: @Model.RoomCount</p>
            <p class="card-text">Rate (per night): $@Model.Rate</p>
            <a href="/HotelRooms/Edit/@Model.Id" class="btn btn-primary">Edit</a>
            <a href="/HotelRooms/Delete/@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this hotel room?');">Delete</a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/HotelRooms/Index" class="btn btn-secondary">Back to Hotel Rooms</a>
</div>
