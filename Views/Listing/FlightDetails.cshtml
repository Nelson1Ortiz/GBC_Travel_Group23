@model IEnumerable<GBC_Travel_Group23.Models.Flight>

@{
    ViewData["Title"] = "Flight Listings";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <table class="table table-responsive table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Airline</th>
                        <th scope="col">Flight Code</th>
                        <th scope="col">Departure</th>
                        <th scope="col">Arrival</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td>@flight.Airline</td>
                            <td>@flight.FlightCode</td>
                            <td>@flight.DepartureLocation.City - @flight.DepartureDate.ToString("g")</td>
                            <td>@flight.ArrivalLocation.City - @flight.ArrivalDate.ToString("g")</td>
                            <td>@flight.Price.ToString("C")</td>
                            <td>
                                <a href="/Flights/Edit/@flight.Id" class="btn btn-primary btn-sm">Edit</a>
                                <a href="/Flights/Delete/@flight.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this flight?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
